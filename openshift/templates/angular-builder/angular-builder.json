{
  "kind": "Template",
  "apiVersion": "v1",
  "metadata": {
    "name": "angular-builder-app-branch",
    "creationTimestamp": null
  },
  "objects": [
    {
      "kind": "ImageStream",
      "apiVersion": "v1",
      "metadata": {
        "name": "${NAME}"
      }
    },
    {
      "kind": "BuildConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "${NAME}",
        "creationTimestamp": null,
        "labels": {
          "app": "${NAME}"
        }
      },
      "spec": {
		"failedBuildsHistoryLimit": 5,
		"nodeSelector": null,
        "output": {
          "to": {
            "kind": "ImageStreamTag",
            "name": "${NAME}:latest"
          }
        },
        "postCommit": {},
        "resources": {
		  "limits": {
			"cpu": "1",
			"memory": "4Gi"
		  },
		  "requests": {
			"memory": "2Gi"
		  }
		},
        "runPolicy": "Serial",
        "source": {
          "type": "Git",
          "git": {
            "uri": "${GIT_REPO_URL}",
	        "ref": "${GIT_REFERENCE}"
          },
          "contextDir": "openshift/templates/angular-builder/"
        },
        "strategy": {
		  "from": {
			"kind": "ImageStreamTag",
			"name": "nodejs:8",
			"namespace": "openshift"
		  },
          "type": "Source"
        },
		"successfulBuildsHistoryLimit": 5,
		"triggers": [ 
		{
			"type": "ConfigChange"
		}
		]
      },
      "status": {
        "lastVersion": 0
      }
    }
  ],
  "parameters": [
    {
      "name": "NAME",
      "displayName": "Name",
      "description": "The name assigned to app-branch-angular-builder. Ie. angular-builder-msp-account-letter, if on master branch: angular-builder-msp",
      "required": true,
      "value": "angular-builder-app-branch"
    },
    {
      "name": "GIT_REPO_URL",
      "displayName": "Git Repo URL",
      "description": "The URL to your GIT repo, don't use the default unless your just experimenting.",
      "required": true,
      "value": "https://github.com/bcgov/moh-sitereg.git"
    },
    {
      "name": "GIT_REFERENCE",
      "displayName": "Git Reference",
      "description": "Optional branch, tag, or commit.",
      "required": true,
      "value": "master"
    }
  ]
}
