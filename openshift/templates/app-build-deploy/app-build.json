{
  "kind": "Template",
  "apiVersion": "v1",
  "metadata": {
    "name": "app-branch-build",
    "creationTimestamp": null
  },
  "objects": [
    {
      "kind": "ImageStream",
      "apiVersion": "v1",
      "metadata": {
        "name": "${NAME}"
      }
    },
    {
      "kind": "BuildConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "${NAME}-build",
        "creationTimestamp": null,
        "labels": {
          "app": "${NAME}"
        }
      },
      "spec": {
        "completionDeadlineSeconds": 1800,
		"failedBuildsHistoryLimit": 5,
		"nodeSelector": null,
        "output": {
          "to": {
            "kind": "ImageStreamTag",
            "name": "${NAME}:latest"
          }
        },
		"postCommit": {},
        "resources": {
          "limits": {
            "cpu": "1",
            "memory": "4Gi"
          },
          "requests": {
            "cpu": "100m",
            "memory": "2Gi"
          }
        },
        "runPolicy": "Parallel",
        "source": {
		  "dockerfile": "\|-\nFROM angular-builder-${NAME}:latest\nCOPY * /tmp/app/dist/CMD  /usr/libexec/s2i/run",
		  "images": [
			{
			  "as": null,
			  "from": {
			    "kind": "ImageStreamTag",
			    "name": "angular-builder-${NAME}:latest"
			  },
			  "paths": [
			    {
				  "destinationDir": "tmp",
				  "sourcePath": "/opt/app-root/src/dist/."
			    }
			  ]
			}
		  ],
          "type": "Dockerfile",
        },
        "strategy": {
		  "dockerStrategy": {
			"from": {
			  "kind": "ImageStreamTag",
			  "name": "nginx-runtime-${NAME}:latest"
			}
		  },
		  "type": "Dockerfile"
        },
		"successfulBuildsHistoryLimit": 5,
        "triggers": [
          {
            "type": "ImageChange"
          }
        ],
      },
      "status": {
        "lastVersion": 0
      }
    }
  ],
  "parameters": [
    {
      "name": "NAME",
      "displayName": "Name",
      "description": "The name-branch assigned to all of the app. Ie. msp-account-letter. If on master branch, just the app name, ie. msp",
      "required": true,
      "value": "msp-account-letter"
    },
    {
      "name": "GIT_SOURCE_URL",
      "displayName": "GIT Source Repo URL",
      "description": "A GIT URL to your source code.",
      "required": true,
      "value": "https://github.com/bcgov/moh-sitereg.git"
    },
    {
      "name": "GIT_REFERENCE",
      "displayName": "Git Reference",
      "description": "Optional branch, tag, or commit.",
      "required": true,
      "value": "master"
    }
  ]
}
